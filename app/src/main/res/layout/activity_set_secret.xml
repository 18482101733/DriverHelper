<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cduestc.DriverHelper.activity.SetSecretActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_bar"
            android:background="#3a9797"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/tv_questions"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="密保问题 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/abl_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sp_questions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/tv_questions"
        android:layout_toRightOf="@+id/tv_questions"
        android:layout_toEndOf="@+id/tv_questions" />


    <TextView
        android:id="@+id/tv_answer"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="密保答案 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/tv_questions"
        android:layout_toLeftOf="@+id/sp_questions"
        android:layout_toStartOf="@+id/sp_questions" />

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/tv_answer"
        android:layout_toRightOf="@+id/tv_answer"
        android:layout_toEndOf="@+id/tv_answer" />


    <Button
        android:id="@+id/bt_submit"
        android:background="@drawable/login_button_style"
        android:text="提交"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_answer"
        android:layout_alignStart="@+id/tv_answer"
        android:layout_alignRight="@+id/et_answer"
        android:layout_alignEnd="@+id/et_answer" />



</RelativeLayout>
